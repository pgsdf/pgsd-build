# Minimal boot environment configuration
# Ultra-minimal settings for installer-only environment

# Enable PGSD boot environment initialization
pgsd_bootenv_init_enable="YES"

# Minimal memory filesystems (smaller than full version)
tmpmfs="YES"
tmpsize="256m"                        # Reduced from 512m
varmfs="YES"
varsize="128m"                        # Reduced from 256m

# Network - wired only (DHCP auto-config)
dhcpcd_enable="YES"
background_dhclient="YES"

# Disable all non-essential services
sshd_enable="NO"                      # No remote access needed
ntpd_enable="NO"                      # No time sync needed
dbus_enable="NO"                      # No dbus (reduces memory)
sndiod_enable="NO"                    # No audio
powerd_enable="NO"                    # No power management

# Disable mail system completely
sendmail_enable="NONE"
sendmail_submit_enable="NO"
sendmail_outbound_enable="NO"
sendmail_msp_queue_enable="NO"

# Minimal logging
syslogd_enable="NO"                   # No logging at all
syslogd_flags="-ss"

# Clear flags for minimal boot
clear_tmp_enable="NO"
update_motd="NO"

# Console only (no extra TTYs)
# Only ttyv0 will be active

# Boot optimization
kern_securelevel_enable="NO"
linux_enable="NO"
